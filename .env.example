# Telegram Bot Token from @BotFather
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Telegram User IDs of admins, comma-separated (e.g., 12345,67890)
ADMIN_IDS=

# --- YooKassa Settings ---



# Settings for direct YooKassa API integration
YOOKASSA_ENABLED=True
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_RETURN_URL= # For user redirection after payment completion
YOOKASSA_NOTIFICATION_URL= # For server-to-server payment status notifications from YooKassa
YOOKASSA_DEFAULT_RECEIPT_EMAIL=
YOOKASSA_VAT_CODE=1
YOOKASSA_PAYMENT_MODE=full_prepayment
YOOKASSA_PAYMENT_SUBJECT=service

# --- Service Price ---
SERVICE_PRICE=1000.00

# --- Webhook Settings ---
# Base URL for webhook, e.g., https://your.domain
WEBHOOK_HOST=
# Path for webhook, e.g., /webhook/mybot
WEBHOOK_PATH=/webhook/bot
# Host and port for the internal web server
WEB_SERVER_HOST=0.0.0.0
WEB_SERVER_PORT=8080

# PostgreSQL connection settings
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=mydatabase
POSTGRES_HOST=db
POSTGRES_PORT=5432
