# Telegram Bot Token from @BotFather
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Telegram User IDs of admins, comma-separated (e.g., 12345,67890)
ADMIN_IDS=

# --- YooKassa Settings ---

# Legacy token for native Telegram Payments (now optional)
# YUKASSA_PAYMENTS_TOKEN=YOUR_TELEGRAM_PAYMENTS_TOKEN_HERE

# Settings for direct YooKassa API integration
YOOKASSA_ENABLED=True
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_RETURN_URL=
YOOKASSA_DEFAULT_RECEIPT_EMAIL=
YOOKASSA_VAT_CODE=1
YOOKASSA_PAYMENT_MODE=full_prepayment
YOOKASSA_PAYMENT_SUBJECT=service

# PostgreSQL connection settings
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=mydatabase
POSTGRES_HOST=db
POSTGRES_PORT=5432
